 static void Main(string[] args)
        {
            Console.WriteLine("Enter your numbers");
            int X, Y, Z;
            X = int.Parse(Console.ReadLine());
            Y = int.Parse(Console.ReadLine());
            Z =  Mul(X,Y);
            Console.WriteLine($"The answer = {Z}");
            Console.ReadLine();
        }
        public static int Mul(int B, int P)
        {
            int Result;
            if (P > 0)
            {
                Result = B * Mul(B,P - 1);
            }
            else
                Result = 1;
            return Result;
        }
